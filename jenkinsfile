pipeline{
    agent any
    enviornment{
        DOCKER TAG = getDcoekrTag()
     }
    stages{
        stage('Git Checkout'){
            steps{
                git credentialsId: 'github', url: 'https://github.com/Moni3099/my-app'
                
            }
        }
        stage('Build Docker Image'){
           steps{
               sh "docker build . -t moni1693/tomcat:${DOCKER-TAG}"
               }
           }
      }
 }
 def getDockerTag(){
     def tag = sh script: 'git rev-parse HEAD', returnStdout: true
     return tag
  }
